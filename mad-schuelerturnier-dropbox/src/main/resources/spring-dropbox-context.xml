<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
	   http://www.springframework.org/schema/beans      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/context    http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:component-scan base-package="com.googlecode.madschuelerturnier"/>

    <context:annotation-config/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <!-- SYSTEM_PROPERTIES_MODE_OVERRIDE = 2-->
        <property name="systemPropertiesMode" value="2"/>
        <property name="locations">
            <list>
                <value>classpath*:**.properties</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="nullValue" value=""/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <!-- does not necessarily have to be the same name as the bean to be exported -->
        <property name="serviceName" value="DropboxConnectorRemote"/>
        <property name="service" ref="localDropboxConnector"/>
        <property name="serviceInterface" value="com.googlecode.madschuelerturnier.business.dropbox.DropboxConnector"/>
        <!-- defaults to 1099 -->
        <property name="registryPort" value="1199"/>
    </bean>

</beans>
